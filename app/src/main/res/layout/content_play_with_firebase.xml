<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mobiledev.unb.ca.whereyouapp.PlayWithFirebase"
    tools:showIn="@layout/activity_play_with_firebase">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input text will be added to firebase"
        android:id="@+id/txtContent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input text will update matching firebase record"
        android:id="@+id/textView"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/txtContent"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAddToFirebase"
        android:layout_below="@+id/txtContent"
        android:layout_alignParentStart="true"
        android:text="value" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUpdateKey"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:text="key" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUpdateValue"
        android:layout_below="@+id/txtUpdateKey"
        android:layout_alignParentStart="true"
        android:text="value" />

</RelativeLayout>
